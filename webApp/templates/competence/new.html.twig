{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold bg-gradient-to-r from-blue-800 to-blue-600 text-transparent bg-clip-text mb-8">
			Créer une nouvelle compétence
		</h1>

		{{ form_start(form, {'attr': {'class': 'max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-6 space-y-6'}}) }}
		<div class="space-y-6">
			{{ form_row(form.type, {
                'label_attr': {'class': 'block text-sm font-semibold text-blue-900 mb-2'},
                'attr': {'class': 'w-full px-4 py-2 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300'}
            }) }}

			{{ form_row(form.libelle, {
                'label_attr': {'class': 'block text-sm font-semibold text-blue-900 mb-2'},
                'attr': {'class': 'w-full px-4 py-2 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300'}
            }) }}
		</div>

		{% for message in app.flashes('danger') %}
			<div class="rounded-md bg-red-50 p-4 mt-4">
				<div class="flex">
					<div class="flex-shrink-0">
						<svg class="h-5 w-5 text-red-400" viewbox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-3">
						<p class="text-sm font-medium text-red-800">{{ message }}</p>
					</div>
				</div>
			</div>
		{% endfor %}

		<div class="flex justify-end pt-4">
			{{ form_widget(form.save, {
                'attr': {
                    'class': 'px-6 py-2.5 bg-gradient-to-r from-blue-700 to-blue-900 text-white font-semibold rounded-full shadow-md hover:from-blue-800 hover:to-blue-900 transition-all duration-300 transform hover:scale-105'
                }
            }) }}
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
